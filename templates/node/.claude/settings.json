{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "permissions": {
        "allow": [
            "Bash(devenv *)",
            "Bash(node *)",
            "Bash(pnpm *)",
            "Bash(npm *)"
        ],
        "deny": [
            "Read(./.env)",
            "Read(./.env.*)",
            "Read(./secrets/**)"
        ]
    }
}